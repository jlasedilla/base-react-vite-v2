{
    "name": "base-react-vite-v2",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc && vite build",
        "build:staging": "tsc && vite build --mode staging",
        "build:test": "tsc && vite build --mode test",
        "build:dev": "tsc && vite build --mode development",
        "preview": "vite preview --host",
        "lint": "eslint . --ext .ts,.tsx",
        "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,json}",
        "test": "vitest",
        "coverage": "vitest run --coverage",
        "cypress:open": "cypress open --config-file cypress/configs/dev.config.ts",
        "cypress:run-dev": "cypress run --config-file cypress/configs/dev.config.ts",
        "cypress:run-stage": "cypress run --config-file cypress/configs/stage.config.ts",
        "cypress:run-test": "cypress run --config-file cypress/configs/test.config.ts",
        "cypress:run-c=dev": "cypress run --component --config-file cypress/configs/dev.config.ts",
        "cypress:run-c=stage": "cypress run --component --config-file cypress/configs/stage.config.ts",
        "cypress:run-c=test": "cypress run --component --config-file cypress/configs/test.config.ts",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build"
    },
    "dependencies": {
        "@reduxjs/toolkit": "^2.2.0",
        "i18next": "^23.8.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^14.0.5",
        "react-redux": "^9.1.0",
        "react-router-dom": "^6.22.0"
    },
    "devDependencies": {
        "@babel/core": "^7.23.9",
        "@storybook/addon-actions": "^7.6.14",
        "@storybook/addon-essentials": "^7.6.14",
        "@storybook/addon-interactions": "^7.6.14",
        "@storybook/addon-links": "^7.6.14",
        "@storybook/react": "^7.6.14",
        "@storybook/react-vite": "^7.6.14",
        "@storybook/testing-library": "^0.2.2",
        "@types/react": "^18.2.55",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "@vitejs/plugin-react-swc": "^3.6.0",
        "@vitest/coverage-v8": "^1.2.2",
        "autoprefixer": "^10.4.17",
        "babel-loader": "^9.1.3",
        "cypress": "^13.6.4",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-cypress": "^2.15.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "mochawesome": "^7.1.3",
        "mochawesome-merge": "^4.3.0",
        "mochawesome-report-generator": "^6.2.0",
        "postcss": "^8.4.35",
        "prettier": "^3.2.5",
        "storybook": "^7.6.14",
        "storybook-dark-mode": "^3.0.3",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.1.1",
        "vite-tsconfig-paths": "^4.3.1",
        "vitest": "^1.2.2"
    }
}
